<%- include('../partials/head') %>
<%- include('../partials/header') %>

<body>
    <main id="main">
        <!-- ======= Breadcrumbs ======= -->
        <div class="breadcrumbs d-flex align-items-center" style="background-image: url('/img/breadcrumbs-bg.jpg');">
          <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">
            <h2>Delete Account</h2>
          </div>
        </div>
    
        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">
            <div class="container" data-aos="fade-up" data-aos-delay="100">
    
                <div class="col-lg-6">
                    <form action="/editAccountPassword" method="POST">
                        <fieldset>
                            <legend>Edit Password:</legend>
                            <div class="form-group">
                                <label for="username">Current Username:</label>
                                <input type="text" id="username" name="username" value="<%= user[0].username %>" readonly>
                            </div>
                            <div class="form-group">
                                <label for="password">Current Password:</label>
                                <input type="text" id="password" name="password" value="<%= user[0].password %>" readonly>
                            </div>
                            <div class="form-group">
                                <label for="newPassword">New Password:</label>
                                <input type="text" id="newPassword" name="newPassword" placeholder="Enter new password" required>
                            </div>
                        </fieldset>
                        <button class="btn btn-primary" id="survey-btn" type="submit">Save Password</button>
                    </form>
                </div>
            </div>
        </section>
    </main>
</body>

<%- include('../partials/footer') %>