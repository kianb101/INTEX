<body>
    <main id="main">
        <!-- ======= Breadcrumbs ======= -->
        <div class="breadcrumbs d-flex align-items-center" style="background-image: url('/img/breadcrumbs-bg.jpg');">
          <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">
            <h2>Login</h2>
          </div>
        </div>
    
        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">
            <div class="container" data-aos="fade-up" data-aos-delay="100">
    
                <div class="col-lg-6">
                    <form class="login" action="/validateUser" method="post">
                        <div class="form-group">
                            <label for="username">Enter username:</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="username">
                        </div>
                            <div class="form-group">
                            <label for="password">Enter password:</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="********">
                        </div>
                        <button type="submit" class="btn btn-primary" id="survey-btn">Login</button>
                    </form>
                    <form action="/logout" method="get">
                        <button type="submit" class="btn btn-primary" id="login-btn">Logout</button>
                    </form>
                    <% if (msg == "error") { %>
                        <p style="margin-top: 1em; color: red">Invalid credentials. Please try again or contact administrator.</p>
                    <% } %>
                    <% if (msg == "success") { %>
                        <p style="margin-top: 1em; color: green">You are already logged in. Feel free to explore other pages.</p>
                    <% } %>
                    <% if (msg == "logout") { %>
                        <p style="margin-top: 1em; color: green">You have been logged out.</p>
                    <% } %>
                </div>
            </div>
        </section>
    </main>
</body>


