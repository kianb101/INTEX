<%- include('../partials/head') %>
<%- include('../partials/header') %>

<body>
    <main id="main">
        <!-- ======= Breadcrumbs ======= -->
        <div class="breadcrumbs d-flex align-items-center" style="background-image: url('/img/breadcrumbs-bg.jpg');">
          <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">
            <h2>Delete Account</h2>
          </div>
        </div>
    
        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">
            <div class="container" data-aos="fade-up" data-aos-delay="100">
    
                <form action="/editAccountUsername" method="POST">
                    <fieldset>
                        <legend>Edit Username:</legend>
                        <!-- Display current username -->
                        <label for="username">Current Username:</label>
                        <input type="text" id="username" name="username" value="<%= user[0].username %>" readonly>
                        <br><br>
                        <!-- Enter new username -->
                        <label for="newUsername">New Username:</label>
                        <input type="text" id="newUsername" name="newUsername" placeholder="Enter new username" required>
                        <br><br>
                    </fieldset>
                    <button class="btn btn-primary" type="submit">Save Username</button>
                </form>
            </div>
            <div class="container" data-aos="fade-up" data-aos-delay="100">
                <form action="/editAccountPassword" method="POST">
                    <fieldset>
                        <legend>Edit Password:</legend>
                        <!-- Display current password -->
                        <label for="password">Current Password:</label>
                        <input type="text" id="password" name="password" value="<%= user[0].password %>" readonly>
                        <br><br>
                        <!-- Hidden input for username -->
                        <input type="hidden" name="username" value="<%= user[0].username %>">
                        <!-- Enter new password -->
                        <label for="newPassword">New Password:</label>
                        <input type="password" id="newPassword" name="newPassword" placeholder="Enter new password" required>
                        <!-- The 'required' attribute ensures that the field cannot be left blank -->
                        <br><br>
                    </fieldset>
                    <button class="btn btn-primary" type="submit">Save Password</button>
                </form>
            </div>
        </section>
    </main>
</body>

<%- include('../partials/footer') %>
